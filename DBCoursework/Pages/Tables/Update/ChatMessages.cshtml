@page "/ChatMessages/{id}"
@model DBCoursework.Pages.Tables.Update.ChatMessagesModel
@{
    ViewData["Title"] = "Обновить сообщение чата";
    ViewData["Table"] = "ChatMessages";
    ViewData["Type"] = "Update";
}

<h1 class="table-title">Изменить сообщение чата</h1>

<form class="content-main" method="post">
    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.UserId"></label>
                <select asp-for="Form.UserId" asp-items="Model.Member"></select>
                <span asp-validation-for="Form.UserId"></span>
            </div>
        </div>
    </div>

    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.ChatId"></label>
                <select asp-for="Form.ChatId" asp-items="Model.Chat"></select>
                <span asp-validation-for="Form.ChatId"></span>
            </div>
        </div>
    </div>

    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.Message"></label>
                <textarea asp-for="Form.Message"><</textarea>
                <span asp-validation-for="Form.Message"></span>
            </div>
        </div>
    </div>

    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.CreationTime"></label>
                <input asp-for="Form.CreationTime">
                <span asp-validation-for="Form.CreationTime"></span>
            </div>
        </div>
    </div>

    <div class="submit-row">
        <input type="submit" value="Изменить" class="submitlink">
    </div>
</form>

<form method="post" asp-page-handler="Delete">
    <input type="submit" value="Удалить" class="deletelink">
</form>