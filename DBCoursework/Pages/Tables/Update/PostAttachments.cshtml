@page "/PostAttachments/{id}"
@model DBCoursework.Pages.Tables.Update.PostAttachmentsModel
@{
    ViewData["Title"] = "Обновить вложение к посту";
    ViewData["Table"] = "PostAttachments";
    ViewData["Type"] = "Update";
}

<h1 class="table-title">Изменить вложение к посту</h1>

<form class="content-main" method="post">
    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.PostId"></label>
                <select asp-for="Form.PostId" asp-items="Model.Post"></select>
                <span asp-validation-for="Form.PostId"></span>
            </div>
        </div>
    </div>

    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.FilePath"></label>
                <input asp-for="Form.FilePath">
                <span asp-validation-for="Form.FilePath"></span>
            </div>
        </div>
    </div>

    <div class="submit-row">
        <input type="submit" value="Изменить" class="submitlink">
    </div>
</form>

<form method="post" asp-page-handler="Delete">
    <input type="submit" value="Удалить" class="deletelink">
</form>