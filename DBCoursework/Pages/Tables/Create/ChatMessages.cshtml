@page "/ChatMessages/create"
@model DBCoursework.Pages.Tables.Create.ChatMessagesModel
@{
    ViewData["Title"] = "Добавить сообщение чата";
    ViewData["Table"] = "ChatMessages";
    ViewData["Type"] = "Create";
}

<h1 class="table-title">Добавить сообщение чата</h1>

<form class="content-main" method="post">
    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.UserId"></label>
                <select asp-for="Form.UserId" asp-items="Model.Member"></select>
                <span asp-validation-for="Form.UserId"></span>
            </div>
        </div>
    </div>

    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.ChatId"></label>
                <select asp-for="Form.ChatId" asp-items="Model.Chat"></select>
                <span asp-validation-for="Form.ChatId"></span>
            </div>
        </div>
    </div>

    <div class="form-row field-title">
        <div>
            <div class="input-container">
                <label asp-for="Form.Message"></label>
                <textarea asp-for="Form.Message"><</textarea>
                <span asp-validation-for="Form.Message"></span>
            </div>
        </div>
    </div>

    <div class="submit-row">
        <input type="submit" value="Добавить" class="submitlink">
    </div>
</form>